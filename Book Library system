import java.util.Scanner;

class Book {
    private String title;
    private String author;
    private String isbn;
    private int availableCopies;

    public Book(String title, String author, String isbn, int availableCopies) {
        this.title = title;
        this.author = author;
        this.isbn = isbn;
        this.availableCopies = availableCopies;
    }

    public boolean borrowBook() {
        if (availableCopies > 0) {
            availableCopies--;
            return true; 
        } else {
            return false; 
        }
    }

    public void returnBook() {
        availableCopies++;
    }

    public String getBookDetails() {
        return "\nTitle: " + title + "\nAuthor: " + author + " \nISBN: " + isbn + " \nAvailable Copies: " + availableCopies;
    }

    public int getAvailableCopies() {
        return availableCopies;
    }

    public String getTitle() {
        return title;
    }

    public String getAuthor() {
        return author;
    }

    public String getIsbn() {
        return isbn;
    }
}

public class MainLibrary {
    public static void main(String[] args) {
        Book book1 = new Book("Ang Masaklap Na Buhay ng isang Bobong istudyante", "Rachel Nodalo", "01010101",169);

        Scanner scanner = new Scanner(System.in);
        int option;

        do {
            System.out.println("\nLibrary Management System");
            System.out.println("1. Borrow a Book");
            System.out.println("2. Return a Book");
            System.out.println("3. Book Details");
            System.out.println("4. Available Copies");
            System.out.println("0. Exit");
            System.out.print("Choose an option: ");
            option = scanner.nextInt();
            scanner.nextLine(); 

            switch (option) {
                case 1:
                    if (book1.borrowBook()) {
                        System.out.println("Book borrowed successfully.");
                    } else {
                        System.out.println("No available copies to borrow.");
                    }
                    break;
                case 2:
                    book1.returnBook();
                    System.out.println("Book returned successfully.");
                    break;
                case 3:
                    System.out.println(book1.getBookDetails());
                    break;
                case 4:
                    System.out.println("Available Copies: " + (book1.getAvailableCopies()));
                    break;
                case 0:  
                    System.out.println("Exiting the system.");
                    break;
                default: 
                    System.out.println("Not in the Options, Please try again.");
            }
        } while (option != 0);
    }
}
